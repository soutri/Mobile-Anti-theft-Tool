<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_user_details"
    android:background="#424242"
    tools:context="com.example.aravind.antivol.UserDetailsActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Change User Details"
        android:id="@+id/textView2"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:layout_centerHorizontal="true"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/antivolEmailId"
        android:layout_marginTop="90dp"
        android:layout_alignParentTop="true"
        android:hint="Change Email Id"
        android:textColorHint="#FFFFFF"
        android:textColor="#FFFFFF"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:id="@+id/antivolBackUpNumber"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/antivolEmailId"
        android:layout_alignLeft="@+id/antivolEmailId"
        android:layout_alignStart="@+id/antivolEmailId"
        android:hint="Change Backup Number"
        android:textColorHint="#FFFFFF"
        android:textColor="#FFFFFF"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/AntivolPasswordChange"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/antivolBackUpNumber"
        android:layout_alignLeft="@+id/antivolBackUpNumber"
        android:layout_alignStart="@+id/antivolBackUpNumber"
        android:hint="Enter Antivol Password"
        android:textColorHint="#FFFFFF"
        android:textColor="#FFFFFF"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Change"
        android:id="@+id/change"
        android:layout_below="@+id/AntivolPasswordChange"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp" />

</RelativeLayout>
